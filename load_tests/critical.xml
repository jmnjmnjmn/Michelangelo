  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at posts -->
      <thinktime value="1" random="true"></thinktime>

      <!-- visit the New Community form, as a user would do.  -->
      <request>
        <http url='/register' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out new community form -->
      <thinktime value="2" random="true"></thinktime>

      <!-- create a random number to make a unique community name -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_user_name" />
      </setdynvars>

      <!-- post to /communities to create a community.
           remember the url of the created community so we can delete it later -->
      <request subst="true">
       <!--  <dyn_variable name="created_community_url" re="[Ll]ocation: (http://.*)\r"/>
        <dyn_variable name="created_community_id" re="[Ll]ocation: http://.*/communities/(.*)\r"/> -->
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='user%5Bname%5D=name%%_random_user_name%%&amp;user%5Bpassword%5D=1234&amp;user%5Bpassword_confirmation%5D=1234&amp; commit=Create+User'>
        </http>
      </request>

      
      <thinktime value="2" random="true"></thinktime>

      <request>
        <http url='/login' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
       <http
       url='/login'
       version='1.1'
       method='POST' contents='name=name%%_random_user_name%%&amp;password=1234&amp;commit=Login'>
       </http>
     </request>

     <thinktime value="1" random="true"></thinktime>

      <request>
        <http url='/musics' version='1.1' method='GET'></http>
      </request>


      <request>
        <http url='/musics/new' version='1.1' method='GET'></http>
      </request>

     <thinktime value="3" random="true"></thinktime>

      <request subst="true">
       <http
       url='/musics'
       version='1.1'
       method='POST' contents='music%5Bcomment%5D=commentcommentcommentcomment&amp;music%5Blink%5D=52.25.62.242&amp;music%5Bsharetype%5D=0&amp;commit=Submit'>
       </http>
     </request>
      
      <!-- <thinktime value="3" random="true"></thinktime> -->

      <request>
        <http url='/comments/new?post_id=1' version='1.1' method='GET'></http>
      </request>

      <thinktime value="3" random="true"></thinktime>

      <request subst="true">
       <http
       url='/comments'
       version='1.1'
       method='POST' contents='comment%5Bcontent%5D=commentcommentcommentcomment%%&amp;comment%5Bpost_id%5D=1&amp;commit=Submit'>
       </http>
      </request>

      <thinktime value="1" random="true"></thinktime>

      <request>
        <http url='/musics/likes/1' version='1.1' method='PUT'></http>
      </request>

      
    
    <!--  <thinktime value="3" random="true"></thinktime>

      <request>
        <http url='/audios' version='1.1' method='GET'></http>
      </request>


      <request>
        <http url='/audios/new' version='1.1' method='GET'></http>
      </request> -->

      <thinktime value="3" random="true"></thinktime>
      <request>
        <http url='/users/mytimeline/1' version='1.1' method='GET'></http>
      </request>

     <thinktime value="3" random="true"></thinktime>
      <request>
        <http url='/users/friends/1' version='1.1' method='GET'></http>
      </request>

      <thinktime value="3" random="true"></thinktime>
      <request>
        <http url='/search' version='1.1' method='GET'></http>
      </request>
      <request>
        <http url='/search?search=1' version='1.1' method='GET'></http>
      </request>
     
     

