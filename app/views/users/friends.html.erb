<p id="notice"><%= notice %></p>


<h4>My Friends</h4>


    <table class="table table-striped">
        <% @friends.each do |friend| %>
        <tr>
        <td class="col-md-6">
          <%= image_tag friend.image.url(:small), :class => "profile-img" %>
           <%= link_to friend.name, mytimeline_path(friend.id) %> 
          <% if @current_user == @user %>
            </td>
            <td class="col-md-2" style="vertical-align:middle">
                <%= link_to "Delete", friendship_path(:friended_id => friend.id), :method => :delete, :class=>"btn btn-default" %>
          <% end %>
        </td>
        </tr>
      <% end %>
    </table>

<%= will_paginate @friends, renderer: BootstrapPagination::Rails %>

    

