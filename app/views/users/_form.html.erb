  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h4>Failed to create this user</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="depot_form">
<br />
<%= form_for(@user , :html => { :multipart => true 
}) do |f| %>

  <fieldset>
  <div class="form-signin">
  <legend>Enter User Details</legend>

  <div class="field">
    <div><%= f.label :name, 'Name:' %></div>
    <div><%= f.text_field :name, size: 40, :class => "form-control" %></div>
  </div>

  <div class="field">
    <div><%= f.label :gender, 'Gender:' %></div>
    <div><%= f.text_field :gender, size: 40, :class => "form-control" %></div>
  </div>

  <div class="field">
    <div><%= f.label :age, 'Age:' %></div>
    <div><%= f.text_field :age, size: 40, :class => "form-control" %></div>
  </div>

  <div class="field">
    <div><%= f.label :interest, 'Interest:' %></div>
    <div><%= f.text_field :interest, size: 40, :class => "form-control" %></div>
  </div>

  <div class="field">
    <div><%= f.label :picurl, 'Picture:' %></div>
    <div><%= f.text_field :picurl, size: 40, :class => "form-control" %></div>
  </div>

  <div class="field">
    <div><%= f.label :password, 'Password:' %></div>
    <div><%= f.password_field :password, size: 40, :class => "form-control" %></div>
  </div>

  
  <div class="field">
    <%= f.label :password_confirmation, 'Confirm:' %>
    <%= f.password_field :password_confirmation, size: 40, :class => "form-control" %>
  </div>


  <div class="field">
    <%= f.label :image, "Profile Photo" %><br />
    <%= f.file_field :image, size: 40, :class => "form-control" %>
  </div>

  <div class="actions btn btn-submit">
    <%= f.submit %>
  </div>

  <%= link_to 'Back', login_url %>


</div>
  </fieldset>
<% end %>
</div>

