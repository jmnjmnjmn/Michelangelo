  <% if @audio.errors.any? %>
    <div id="error_explanation">
      <h4>Failed to post this audio</h4>

      <ul>
      <% @audio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="middle-page">
<hr>
<%= form_for(@audio, :html => {:multipart => true, :class => "form-group"}) do |f| %>

  <div class="field">
    <label class="sr-only">Comment:</label>
    <%= f.text_area :comment,rows:4, placeholder: "What's on your mind? ", :class => "form-control" %>
  </div>

  <br>

<!--   <div class="field">
    <%= f.label :audioFile, "Audio" %><br />
    <%= f.file_field :audioFile, :class => "form-control" %>
  </div> -->

  <div class="field row">
    <%= f.label :audioFile, "Audio" %>
    <%= f.file_field :audioFile, :class => "form-control" %>
  </div>  

  <br>
  <div class="actions">
    <%= f.submit "Submit", :class => 'btn btn-primary'%>
  </div>

  <br />
<% end %>
</div>